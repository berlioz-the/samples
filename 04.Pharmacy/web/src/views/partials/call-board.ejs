<div class="card dark">
    <div class="card-header">
        Dashboard
    </div>
    <div class="card-body">
        <% if (_.isArray(readyItems)) { readyItems.forEach(function(item) { %>
            <div class="card float-left m-2" style="min-width: 150px;">
                <div class="card-body">
                    <h5 class="card-title"><%= item.patient %></h5>
                    <p class="card-subtitle"><%= item.medication %></p>
                    <p class="card-text">
                        Dropped at: <%= item.dropDate %><br />
                        Ready at: <%= item.readyDate %>
                    </p>
                    <form action="/pick-up" method="post">
                        <input type="hidden" name="patient" value="<%= item.patient %>">
                        <button type="submit" class="btn btn-primary">Pick Up</button>
                    </form>
                </div>
            </div>
        <% }); } %>
    </div>
</div>
