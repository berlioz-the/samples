---
kind: service
cluster: hello
name: redis
identity:
    kind: sequential

provides:
    default:
        port: 6379
        protocol: tcp
    gossip:
        port: 16379
        protocol: tcp

consumes:
    - service: redis
      endpoint: default
    - service: redis
      endpoint: gossip

environment:
    replica_count: 1

resources:
    memory:
        min: 300
