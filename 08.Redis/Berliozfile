---
kind: service
cluster: hello
name: redis

provides:
    default:
        port: 6379
        protocol: tcp
    web:
        port: 3000
        protocol: http
    gossip:
        port: 16379
        protocol: tcp

consumes:
    - service: redis
      endpoint: default
    - service: redis
      endpoint: gossip

environment:
    replica_count: 1

resources:
    memory:
        min: 300
