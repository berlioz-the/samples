---
kind: service
cluster: hello_world
name: web

discovery:
    - kind: dns
      access: public
    - kind: address_reserve

provides:
    client:
        - port: 3000
          protocol: http
          load-balance: true

consumes:
    - cluster: hello_world
      service: app
      endpoint: client

scale:
    min: 4

resources:
    memory:
        min: 128
