---
kind: service
cluster: hello
name: db

identity:
    kind: sequential

provides:
    client:
        port: 3306
        protocol: tcp

storage:
    - permanent: true
      path: /etc/mysql/conf.d
      size: 1GB
    - permanent: true
      path: /var/lib/mysql
      size: 1GB

environment:
    MYSQL_ROOT_PASSWORD: mypassword

scale:
    min: 1

resources:
    memory:
        min: 300
